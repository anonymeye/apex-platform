# LLM API Keys
GROQ_API_KEY=your-groq-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HF_TOKEN=your-huggingface-token

# Database Configuration (for Docker)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/apex_db

# PostgreSQL Docker Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=apex_db
POSTGRES_PORT=5432

# Application Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Evaluation: LLM judge (default model for scoring agent responses)
JUDGE_MODEL=gpt-4o-mini
JUDGE_PROVIDER=openai
JUDGE_API_KEY_ENV_VAR=OPENAI_API_KEY

# Application Settings
APP_NAME=Apex API
DEBUG=false

# Vector store: pgvector (persistent) or memory (in-memory, dev only)
VECTOR_STORE_TYPE=pgvector
# Must match embedding model dimension (e.g. all-MiniLM-L6-v2 = 384)
EMBEDDING_DIMENSION=384

# Migration Control
RUN_MIGRATIONS_ON_STARTUP=true

# Ports
APEX_PORT=8000
PORTAL_PORT=3000
